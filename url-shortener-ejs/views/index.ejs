<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <title>URL Shrinker</title>
</head>
<body>
<div class="container">
    <h1>URL Shrinker</h1>
    <form action="/shortUrls" method="POST" class="my-4 form-inline">
        <label class="sr-only" for="fullUrl">URL</label>
        <input placeholder="URL" type="url" name="fullUrl" id="fullUrl" class="col form-control mr-2">
        <button type="submit" class="btn btn-success">Shrink</button>
    </form>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Full Url</th>
                <th>Short Url</th>
                <th>Clicks</th>
            </tr>
        </thead>
        <tbody>
            <% urls.forEach(url => { %>   
                <tr>
                    <td><a href="<%= url.full %>"><%= url.full %></a></td>
                    <td><a href="<%= url.short %>"><%= url.short %></a></td>
                    <td><%= url.clicks %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>
</body>
</html>